<div class="main_messages">
    <div class="main_messages_name">
      <div class="name"><%=message.user.name%></div>
      <div class="day"><%=message.created_at%><%= l message.created_at %></div>
    </div>
    <div class="main_messages_content">
      <div class="content"><%=message.content%></div>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    </div>
</div>