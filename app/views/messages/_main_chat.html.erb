<div class="main_header">
  <div class=main_header_title>
    <%=@room.name%>
  </div>
  <div class="main_header_btn">
    <%=link_to "チャットを終了する",room_path(@room), data: {turbo_method: :delete}%>
  </div>
</div>


<div class="main_content">
  <%= render partial: 'message', collection: @messages %>

</div>


<%=form_with model: [@room,@message], html: {class:"form"},local: true do |f|%>
  <div class="form_message">
    <%= f.text_field :content, class: 'form-content', placeholder: 'type a message' %>
    <%# <input class="form-content" placeholder="type a message"> %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
      <%# <input type="file" class="hidden"> %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
  <%# <input class="form-submit" type="submit" value="送信"> %>
<%end%>
